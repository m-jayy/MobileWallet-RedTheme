<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/contact_bg2"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="com.example.b.pocket_wallet.ProfileFragment">




    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/contact_background">




        <TextView
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Developer Cafe Phone Wallet"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_home_black_24dp"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Regional Office: Rizwan Plaza, Blue Area, Islamabad, Pakistan"
                android:textSize="14dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_local_phone_black_24dp"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="051-7860111"
                android:textSize="14dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_smartphone_black_24dp"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="090078601"
                android:textSize="14dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_email_black_24dp"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="m.mohsinjaved2010@gmail.com"
                android:textSize="14dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_language_black_24dp"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="2"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="www.facebook.com"
                android:textSize="14dp"/>


        </LinearLayout>



        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/call"/>




    </LinearLayout>






</RelativeLayout>
