<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/home_bg"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.b.pocket_wallet.Movie_main_page"
    tools:showIn="@layout/activity_movie_main_page">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select City*"/>

    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/spinnercity"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Select Cinema*"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinneCinema"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Date*:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_date_range_black_24dp"
            android:id="@+id/datebtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

            <TextView
                android:id="@+id/dateTxtview"
                android:layout_marginTop="11dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Select Time*"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinneTime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Select No Of Seats*"/>

        <Spinner
            android:layout_marginTop="10dp"
            android:id="@+id/spinneSeats"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
